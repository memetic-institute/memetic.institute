{
    "name": "memetic.institute",
    "description": "Better memes for a brighter tomorrow",
    "homepage": "https://memetic.institute",
    "repository": "github:memetic-institute/memetic.institute.git",
    "author": "IMRD <hi@memetic.institute> (https://memetic.institute)",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "compile": "next build",
        "export": "next export",
        "build": "npm-run-all compile export",
        "serve": "serve out",
        "start": "npm-run-all build serve",
        "predeploy": "npm-run-all build",
        "deploy": "now --prod",
        "analyze": "cross-env ANALYZE=true next build",
        "eslint": "eslint",
        "lint": "npm-run-all 'eslint {@} --ignore-path .gitignore .' --",
        "lint:fix": "npm-run-all 'lint --fix {@}' --",
        "lint:report": "npm-run-all 'lint --format html --output-file eslint-report.html {@}' --"
    },
    "engines": {
        "node": ">=8"
    },
    "babel": {
        "presets": [
            "next/babel"
        ],
        "plugins": [
            [
                "styled-components",
                {
                    "ssr": true,
                    "displayName": true,
                    "preprocess": false
                }
            ]
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "prettier",
            "react"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "airbnb",
            "prettier",
            "prettier/babel",
            "prettier/react"
        ],
        "env": {
            "browser": true,
            "node": true,
            "es6": true,
            "commonjs": true
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module",
            "allowImportExportEverywhere": false,
            "codeFrame": false
        },
        "globals": {
            "it": true,
            "expect": true,
            "describe": true,
            "jest": true,
            "document": true,
            "test": true,
            "window": true,
            "getComputedStyle": true,
            "fetch": true,
            "WebSocket": true,
            "alert": true,
            "URLSearchParams": true,
            "React": true
        },
        "rules": {
            "function-paren-newline": [
                "error",
                "consistent"
            ],
            "global-require": 0,
            "import/prefer-default-export": 0,
            "jsx-a11y/anchor-is-valid": 0,
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error",
                        "info"
                    ]
                }
            ],
            "no-multiple-empty-lines": [
                "error",
                {
                    "max": 2,
                    "maxEOF": 1
                }
            ],
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": false
                    }
                },
                {
                    "enforceForRenamedProperties": false
                }
            ],
            "prettier/prettier": "warn",
            "quote-props": [
                "error",
                "consistent"
            ],
            "react/destructuring-assignment": 0,
            "react/jsx-filename-extension": 0,
            "react/jsx-first-prop-new-line": [
                1,
                "multiline"
            ],
            "react/jsx-max-props-per-line": [
                1,
                {
                    "when": "multiline"
                }
            ],
            "react/jsx-props-no-spreading": 0,
            "react/no-find-dom-node": 0,
            "react/react-in-jsx-scope": 0,
            "react/sort-comp": 0,
            "react/no-array-index-key": 0,
            "import/no-extraneous-dependencies": [
                "error",
                {
                    "packageDir": "."
                }
            ]
        },
        "settings": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "none"
    },
    "husky": {
        "hooks": {
            "pre-commit": "echo lint-staged"
        }
    },
    "lint-staged": {
        "!(.next|out|coverage|node_modules)/**/!(*test).js": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.28",
        "@fortawesome/free-brands-svg-icons": "^5.13.0",
        "@fortawesome/free-solid-svg-icons": "^5.13.0",
        "@fortawesome/react-fontawesome": "^0.1.9",
        "focus-visible": "^5.0.2",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-optipng": "^7.1.0",
        "imagemin-svgo": "^7.1.0",
        "lqip-loader": "^2.2.0",
        "next": "11.1.3",
        "next-compose-plugins": "^2.2.0",
        "next-fonts": "^1.4.0",
        "next-optimized-images": "^2.5.5",
        "next-seo": "^4.7.3",
        "node-fetch": "^2.6.0",
        "open-graph-scraper": "^3.6.2",
        "qrcode.react": "^1.0.0",
        "react": "16.13.1",
        "react-collapse": "^5.0.1",
        "react-copy-to-clipboard": "^5.0.2",
        "react-dom": "16.13.1",
        "react-ga": "^2.7.0",
        "react-player": "^1.15.2",
        "styled-components": "^5.0.1"
    },
    "devDependencies": {
        "@next/bundle-analyzer": "^9.3.1",
        "babel-eslint": "^10.1.0",
        "babel-plugin-styled-components": "^1.10.7",
        "cross-env": "^7.0.2",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.9",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.2",
        "prop-types": "^15.7.2",
        "serve": "^11.3.0",
        "webpack-bundle-analyzer": "^3.6.1"
    }
}
